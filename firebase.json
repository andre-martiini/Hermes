{
    "functions": [
        {
            "source": "functions",
            "runtime": "python311",
            "codebase": "python",
            "ignore": [
                "venv",
                ".git",
                "firebase-debug.log",
                "firebase-debug.*.log"
            ]
        },
        {
            "source": "functions_node",
            "runtime": "nodejs20",
            "codebase": "node",
            "ignore": [
                "node_modules",
                ".cache",
                ".git",
                "firebase-debug.log",
                "firebase-debug.*.log"
            ]
        }
    ],
    "hosting": {
        "public": "dist",
        "ignore": [
            "firebase.json",
            "**/.*",
            "**/node_modules/**"
        ],
        "rewrites": [
            {
                "source": "**",
                "destination": "/index.html"
            }
        ]
    }
}